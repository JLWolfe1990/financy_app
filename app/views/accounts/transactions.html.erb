<h1>Transactions for Account: <strong><%= @account.display_name %></strong></h1>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th><nobr>Rule Name</nobr></th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @transactions.each do |txn| %>
        <tr>
          <td><nobr><%= txn.date %></nobr></td>
          <td><%= txn.description %></td>
          <td><%= humanized_money_with_symbol txn.amount %></td>
          <td><%= txn.rule_name %></td>
          <td>
            <button id="show-transaction"
                    href="#"
                    data-id="<%= txn.id %>">Details</button>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @transactions, theme: 'twitter-bootstrap-4' %>
</div>
